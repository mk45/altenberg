proxy_cache_path /ramcache keys_zone=ocache:20m max_size=300m inactive=50m use_temp_path=off;
# Default server configuration
#
server {
        listen 80 ;
        listen [::]:80 ;
        server_name altenberg.pl *.altenberg.pl;
        # wp-admin may proceed without cache
        location ~ ^/(wp-admin|wp-login\.php) {
                allow 35.198.77.83;
                deny all;
                proxy_set_header Host $host;
                proxy_pass http://altenberg-vm;
        }
        
        location / {
                proxy_set_header Host $host;
                proxy_cache ocache;
                proxy_cache_valid 200 50m;
                proxy_cache_lock on;
                proxy_cache_key $host$uri$is_args$args;
                proxy_ignore_headers Cache-Control;
                proxy_pass http://altenberg-vm;
        }
}
